{{define "data_source/modal.tmpl"}}

<style>
#dsModal {
  position: fixed; inset: 0; display: none; z-index: 9999; backdrop-filter: blur(4px);
}
#dsModal[data-open="1"] { display: flex; align-items: center; justify-content: center; padding: 20px; }
#dsBackdrop { position: absolute; inset: 0; background: rgba(15, 23, 42, 0.6); }
#dsDialog {
  position: relative; width: min(900px, 95vw); max-height: 95vh; background: var(--card); color: var(--text);
  border: 1px solid var(--border); border-radius: 20px; box-shadow: var(--shadow-lg); display: flex; flex-direction: column;
  overflow: hidden; outline: none; transform: translateY(20px) scale(0.95); opacity: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}
#dsModal[data-open="1"] #dsDialog { transform: translateY(0) scale(1); opacity: 1; }

.ds-header {
  position: sticky; top: 0; background: var(--card); z-index: 2; padding: 24px 28px 20px;
  border-bottom: 1px solid var(--border); display: flex; align-items: center; justify-content: space-between; gap: 16px;
}
.ds-title { margin: 0; font-size: 22px; font-weight: 750; color: var(--text); }
.ds-sub { margin: 6px 0 0; font-size: 13px; color: var(--muted); }
.ds-badge-container { display: flex; align-items: center; gap: 12px; }
.ds-badge {
  font-size: 11px; padding: 4px 12px; border-radius: 20px; border: 1px solid var(--border);
  background: #f0f9ff; color: #0369a1; text-transform: uppercase; font-weight: 600;
}
.close-x {
  border: 1px solid var(--border); background: var(--card); color: var(--muted); width: 36px; height: 36px;
  border-radius: 12px; cursor: pointer; display: inline-flex; align-items: center; justify-content: center;
  transition: all 0.2s ease;
}
.close-x:hover { box-shadow: var(--shadow); color: var(--text); }

.ds-body { padding: 20px 24px 20px; overflow: hidden; flex: 1; min-height: 0; }
.card-sec { border: 1px solid var(--border); border-radius: 12px; padding: 16px; background: var(--card); margin-bottom: 12px; }
.sec-title { margin: 0 0 10px; font-size: 14px; color: var(--text); font-weight: 700; }
.grid-2 { display: grid; grid-template-columns: 1fr 1fr; gap: 12px; }
.field { display: flex; flex-direction: column; gap: 6px; }
.field label { font-size: 13px; color: var(--text); font-weight: 600; }
.field input, .field select, .field textarea {
  border: 1px solid var(--border); border-radius: 10px; padding: 10px 14px; font-size: 14px;
  background: var(--card); color: var(--text); transition: all 0.2s ease;
}
.field input:focus, .field select:focus, .field textarea:focus {
  border-color: var(--primary); box-shadow: 0 0 0 4px var(--focus); outline: none;
}

/* MySQL 配置紧凑样式 */
.mysql-compact .field {
  gap: 3px;
  margin-bottom: 6px;
}
.mysql-compact .field label {
  font-size: 12px;
  margin-bottom: 1px;
}
.mysql-compact .field input {
  padding: 6px 10px;
  font-size: 13px;
  border-radius: 8px;
}
.mysql-compact .password-toggle {
  gap: 4px;
}
.mysql-compact .password-toggle .btn {
  padding: 6px 10px;
  font-size: 12px;
  border-radius: 6px;
  min-width: 50px;
}

.ds-footer {
  position: sticky; bottom: 0; background: var(--card); padding: 12px 28px 16px;
  border-top: 1px solid var(--border); display: flex; justify-content: flex-end; gap: 10px;
}
.ds-footer .btn { padding: 8px 16px; font-weight: 600; border-radius: 10px; }
.ds-footer .btn.primary { background: var(--primary); color: #fff; border: none; }

.password-toggle { display: flex; gap: 8px; align-items: center; }
.password-toggle .btn { padding: 8px 12px; font-size: 12px; border-radius: 8px; min-width: 60px; }
.dsn-preview {
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
  background: #f8fafc; border: 1px solid var(--border); border-radius: 8px; padding: 8px 12px;
  user-select: text; white-space: nowrap; overflow: auto; font-size: 13px; color: var(--text);
}
.test-connection {
  display: flex; gap: 10px; align-items: center; margin-top: 10px; padding: 10px;
  background: color-mix(in oklab, var(--card) 95%, var(--primary) 5%); border-radius: 10px;
  border: 1px solid var(--border);
}
.test-status { font-size: 13px; font-weight: 500; min-height: 20px; }

@media (max-width: 768px) {
  .grid-2 { grid-template-columns: 1fr; gap: 12px; }
  .ds-header { flex-direction: column; align-items: flex-start; gap: 12px; }
  .ds-badge-container { align-self: flex-end; }
  .ds-body { padding: 20px; }
  .ds-footer { flex-direction: column-reverse; gap: 6px; padding: 10px 20px 12px; }
  .ds-footer .btn { width: 100%; }
}

.ds-section { display: none !important; }
#dsDialog[data-dstype="mysql"] #mysqlFields { display: block !important; }
#dsDialog[data-dstype="ofs"] #ofsFields { display: block !important; }
#dsDialog[data-dstype="hdfs"] #hdfsFields { display: block !important; }
#dsDialog[data-dstype="cosn"] #cosnFields { display: block !important; }

/* 大数据存储配置框样式 - 更大更宽松 */
#ofsFields, #hdfsFields, #cosnFields {
  padding: 24px;
  margin-bottom: 20px;
}

#ofsFields .grid-2, #hdfsFields .grid-2, #cosnFields .grid-2 {
  gap: 20px;
}

#ofsFields .field, #hdfsFields .field, #cosnFields .field {
  gap: 10px;
}

#ofsFields .field label, #hdfsFields .field label, #cosnFields .field label {
  font-size: 15px;
  font-weight: 600;
}

#ofsFields .field input, #hdfsFields .field input, #cosnFields .field input,
#ofsFields .field textarea, #hdfsFields .field textarea, #cosnFields .field textarea {
  padding: 14px 18px;
  font-size: 15px;
  border-radius: 12px;
}

#ofsFields .field textarea, #hdfsFields .field textarea, #cosnFields .field textarea {
  min-height: 140px;
  resize: vertical;
}

/* Hadoop配置字段特殊样式 - 位置更靠上 */
#ofsFields .field[style*="grid-column: 1/-1"],
#hdfsFields .field[style*="grid-column: 1/-1"],
#cosnFields .field[style*="grid-column: 1/-1"] {
  margin-top: 8px;
}

#ofsFields .field[style*="grid-column: 1/-1"] label,
#hdfsFields .field[style*="grid-column: 1/-1"] label,
#cosnFields .field[style*="grid-column: 1/-1"] label {
  font-size: 16px;
  font-weight: 700;
  margin-bottom: 8px;
}
</style>

<div id="dsModal" role="dialog" aria-modal="true" aria-labelledby="dsTitle">
  <div id="dsBackdrop"></div>
  <div id="dsDialog" data-dstype="{{if .Type}}{{.Type}}{{else}}mysql{{end}}" tabindex="-1">
    <div class="ds-header">
      <div>
        <h2 id="dsTitle" class="ds-title">数据源</h2>
      </div>
      <div class="ds-badge-container">
        <span class="ds-badge" id="dsBadge">创建中</span>
        <button class="close-x" type="button" id="dsCloseBtn" aria-label="关闭">✕</button>
      </div>
    </div>

    <div class="ds-body">
      <form id="dsForm" method="post" action="/data-sources">
        <div class="card-sec">
          <h3 class="sec-title">基础信息</h3>
          <div class="grid-2">
            <div class="field">
              <label for="dstype">类型</label>
              <select id="dstype" name="type" required>
                <option value="mysql" {{if eq .Type "mysql"}}selected{{end}}>MySQL</option>
                <option value="ofs"   {{if eq .Type "ofs"}}selected{{end}}>OFS</option>
                <option value="hdfs"  {{if eq .Type "hdfs"}}selected{{end}}>HDFS</option>
                <option value="cosn"  {{if eq .Type "cosn"}}selected{{end}}>COSN</option>
              </select>
            </div>
            <div class="field">
              <label for="name">名称</label>
              <input id="name" name="name" value="{{.Name}}" required placeholder="给这个数据源起一个名称">
            </div>
          </div>
        </div>

        <!-- MySQL -->
        <div id="mysqlFields" data-type="mysql" class="card-sec ds-section">
          <h3 class="sec-title">MySQL 连接</h3>
          <div class="grid-2 mysql-compact">
            <div class="field">
              <label for="db_url">主机:端口</label>
              <input id="db_url" name="db_url" value="{{.DBURL}}" placeholder="127.0.0.1:3306">
            </div>
            <div class="field">
              <label for="db_database">数据库名</label>
              <input id="db_database" name="db_database" value="{{.DBDatabase}}" placeholder="example_db">
            </div>
            <div class="field">
              <label for="db_user">用户名</label>
              <input id="db_user" name="db_user" value="{{.DBUser}}" placeholder="root">
            </div>
            <div class="field">
              <label for="db_password">密码</label>
              <div class="password-toggle">
                <input id="db_password" name="db_password" type="password" placeholder="••••••••" autocomplete="new-password">
                <button class="btn" type="button" id="togglePwd">显示</button>
              </div>
            </div>
          </div>
          
          <div class="field" style="margin-top: 12px;">
            <label>DSN 预览</label>
            <div id="dsnPreview" class="dsn-preview">
              mysql://user:***@host:port/db?parseTime=true&charset=utf8mb4
            </div>
            <small class="help" style="margin-top: 4px; display: block;">仅用于校对，提交以表单字段为准</small>
          </div>
          
          <div class="test-connection">
            <button class="btn" type="button" id="btnTestConn">测试连接</button>
            <span id="testStatus" class="test-status" aria-live="polite"></span>
          </div>
        </div>

        <!-- OFS -->
        <div id="ofsFields" data-type="ofs" class="card-sec ds-section">
          <h3 class="sec-title">OFS 配置</h3>
          <div class="field">
            <label for="ofs_defaultfs">DefaultFS</label>
            <input id="ofs_defaultfs" name="defaultfs" value="{{.DefaultFS}}" placeholder="ofs://bucket" required>
          </div>
          <div class="field" style="margin-top: 12px;">
            <label for="ofs_hadoopconfig">Hadoop 配置</label>
            <textarea id="ofs_hadoopconfig" name="hadoopconfig" rows="6" placeholder='{"fs.ofs.endpoint":"xx","fs.ofs.impl":"..."}'>{{.HadoopConfig}}</textarea>
          </div>
        </div>

        <!-- HDFS -->
        <div id="hdfsFields" data-type="hdfs" class="card-sec ds-section">
          <h3 class="sec-title">HDFS 配置</h3>
          <div class="field">
            <label for="hdfs_defaultfs">DefaultFS</label>
            <input id="hdfs_defaultfs" name="defaultfs" value="{{.DefaultFS}}" placeholder="hdfs://namenode:8020" required>
          </div>
          <div class="field" style="margin-top: 12px;">
            <label for="hdfs_hadoopconfig">Hadoop 配置</label>
            <textarea id="hdfs_hadoopconfig" name="hadoopconfig" rows="6" placeholder='{"fs.defaultFS":"hdfs://namenode:8020"}'>{{.HadoopConfig}}</textarea>
          </div>
        </div>

        <!-- COSN -->
        <div id="cosnFields" data-type="cosn" class="card-sec ds-section">
          <h3 class="sec-title">COSN 配置</h3>
          <div class="field">
            <label for="cosn_defaultfs">DefaultFS</label>
            <input id="cosn_defaultfs" name="defaultfs" value="{{.DefaultFS}}" placeholder="cosn://bucket-xxx" required>
          </div>
          <div class="field" style="margin-top: 12px;">
            <label for="cosn_hadoopconfig">Hadoop 配置</label>
            <textarea id="cosn_hadoopconfig" name="hadoopconfig" rows="6" placeholder='{"fs.cosn.impl":"com.qcloud..."}'>{{.HadoopConfig}}</textarea>
          </div>
        </div>
      </form>
    </div>

    <div class="ds-footer">
      <button class="btn" type="button" id="dsCancelBtn">取消</button>
      <button class="btn primary" type="submit" form="dsForm">保存</button>
    </div>
  </div>
</div>

<script>
(function(){
  var modal = document.getElementById('dsModal');
  var dialog= document.getElementById('dsDialog');
  var backdrop=document.getElementById('dsBackdrop');
  var closeBtn=document.getElementById('dsCloseBtn');
  var cancelBtn=document.getElementById('dsCancelBtn');
  var form = document.getElementById('dsForm');
  var typeEl = document.getElementById('dstype');

  function openModal(){ modal.setAttribute('data-open','1'); document.documentElement.style.overflow='hidden'; (document.getElementById('name')||typeEl).focus(); }
  function closeModal(){ if(modal && typeof modal.removeAttribute === 'function') modal.removeAttribute('data-open'); document.documentElement.style.overflow=''; }
  window.openDsModal = openModal;
  window.closeDsModal = closeModal;
  backdrop.addEventListener('click', closeModal); closeBtn.addEventListener('click', closeModal); cancelBtn.addEventListener('click', closeModal);
  document.addEventListener('keydown', function(e){ if(e.key==='Escape' && modal.getAttribute('data-open')==='1'){ closeModal(); }});

  // 分类型：隐藏即禁用 + 独立必填
  var REQUIRED = {
    mysql:['db_url','db_database','db_user','db_password'],
    ofs:['defaultfs'],
    hdfs:['defaultfs'],
    cosn:['defaultfs']
  };
  function setRequired(names,on){ (names||[]).forEach(function(n){ var el=form.elements[n]; if(!el || typeof el.removeAttribute !== 'function') return; on?el.setAttribute('required','required'):el.removeAttribute('required'); }); }
  function disableHidden(){
    var t = dialog.getAttribute('data-dstype');
    ['mysql','ofs','hdfs','cosn'].forEach(function(name){
      var sec = document.getElementById(name+'Fields'); if(!sec) return;
      var on = (name===t);
      sec.querySelectorAll('input,select,textarea,button').forEach(function(el){ 
        if (!el || typeof el.removeAttribute !== 'function') return;
        el.disabled = !on; 
        // 确保被禁用的字段不参与表单验证
        if (!on) {
          el.removeAttribute('required');
          el.value = ''; // 清空被禁用字段的值
        }
      });
      setRequired(REQUIRED[name], false);
    });
    setRequired(REQUIRED[t], true);
  }
  function syncType(){
    var t = typeEl.value || 'mysql';
    dialog.setAttribute('data-dstype', t);
    disableHidden();
    updateDSN();
  }
  typeEl.addEventListener('change', syncType);

  // MySQL 密码显隐
  var togglePwdBtn = document.getElementById('togglePwd');
  var pwd = document.getElementById('db_password');
  if(togglePwdBtn && pwd){
    togglePwdBtn.addEventListener('click', function(){
      var show = (pwd.type === 'password');
      pwd.type = show ? 'text' : 'password';
      togglePwdBtn.textContent = show ? '隐藏' : '显示';
    });
  }

  // DSN 预览（仅 mysql，且已放在 mysql 分组内部）
  var dsnBox = document.getElementById('dsnPreview');
  function updateDSN(){
    if(!dsnBox) return;
    if((dialog.getAttribute('data-dstype')||'mysql')!=='mysql') return;
    var host=(document.getElementById('db_url')||{}).value||'host:port';
    var db  =(document.getElementById('db_database')||{}).value||'db';
    var user=(document.getElementById('db_user')||{}).value||'user';
    var passField = document.getElementById('db_password');
    var hasPass = passField && passField.value && passField.value.trim() !== '';
    dsnBox.textContent='mysql://'+user+':'+(hasPass?'***':'')+'@'+host+'/'+db+'?parseTime=true&charset=utf8mb4';
  }
  ['db_url','db_database','db_user','db_password'].forEach(function(id){ var el=document.getElementById(id); if(el) el.addEventListener('input', updateDSN); });

  // 连接测试
  var btnTest=document.getElementById('btnTestConn'), statusEl=document.getElementById('testStatus');
  if(btnTest && statusEl){
    btnTest.addEventListener('click', function(){
      statusEl.textContent='正在测试...'; statusEl.style.color='var(--muted)';
      var o={}; new FormData(form).forEach(function(v,k){ o[k]=v; });
      fetch('/data-sources/test',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify(o)})
        .then(function(r){return r.json().then(function(j){return{ok:r.ok,j:j};});})
        .then(function(r){
          if(r.ok && r.j.success){ statusEl.textContent=r.j.message||'连接成功'; statusEl.style.color='var(--success)'; }
          else { statusEl.textContent=(r.j&&r.j.error)||'连接失败'; statusEl.style.color='var(--error)'; }
        })
        .catch(function(){ statusEl.textContent='请求异常，请检查网络连接'; statusEl.style.color='var(--error)'; });
    });
  }

  // 表单提交校验
  form.addEventListener('submit', function(e) {
    const errors = validateDataSourceForm(form);
    if (errors.length > 0) {
      e.preventDefault();
      showFormErrors(errors, form);
      return false;
    }
  });

  // 初始化
  syncType();
})();
</script>
{{end}}
